</style>



<script>
document.addEventListener('DOMContentLoaded', () => {
  const track = document.querySelector('.slider-track');
  const left = document.querySelector('.left-arrow');
  const right = document.querySelector('.right-arrow');
  const buttons = document.querySelectorAll('.option-button');

  let isAnimating = false;
  const cardWidth = document.querySelector('.category-card').offsetWidth + 20; // include gap

  function smoothShift(direction) {
    if (isAnimating) return;
    isAnimating = true;

    track.style.transition = 'transform 0.5s ease-in-out';
    track.style.transform = `translateX(${direction * cardWidth}px)`;

    setTimeout(() => {
      track.style.transition = 'none';
      track.style.transform = 'translateX(0)';

      if (direction === -1) {
        const first = track.firstElementChild;
        track.appendChild(first);
      } else {
        const last = track.lastElementChild;
        track.insertBefore(last, track.firstElementChild);
      }

      isAnimating = false;
    }, 500);
  }

  left.addEventListener('click', () => smoothShift(1));
  right.addEventListener('click', () => smoothShift(-1));

   buttons.forEach(button => {
      button.addEventListener('click', () => {
        buttons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
      });
    });
});
</script>


