<header class="header">
  <div class="header-container">
    <h1 class="logo">ANVOGUE</h1>

     <div class="nav-toggle" id="nav-toggle">
      <div class="menu-icon" id="menu-icon">
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>

    <div class="nav-menu" id="nav-menu">
      <nav class="nav">
        <ul class="nav-list">
          <li>DEMO</li>
          <li>FEATURES</li>
          <li>SHOP</li>
          <li>PRODUCT</li>
          <li>BLOG</li>
          <li>PAGES</li>
        </ul>
      </nav>
      <div class="nav-icons">
        <img src="{{ 'search.svg' | asset_url }}" alt="Search icon" class="search-svg" />
        <img src="{{ 'user.svg' | asset_url }}" alt="User icon" />
        <img src="{{ 'heart.svg' | asset_url }}" alt="Heart icon" />
        <img src="{{ 'bag.svg' | asset_url }}" alt="Bag icon" class="bag-svg" />
      </div>
    </div>
  </div>
</header>

<style>
  header {
    width: 100%;
    height: 132px;
    margin-top: 0;
    margin: 0;
    padding: 0;
    background-color: #ffffff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #1F1F1F;
}

.header-container {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.header-container .header-left {
    width: 769px;
    height: 100px;
        display: flex;
    align-items: center;
    justify-content: space-between;
    margin-left: 70px;
}

.header-container h1{
    font-size: 30px;
    margin: 0;
    padding: 0;
    color: #1F1F1F;
    margin-left: 70px;
}


.nav-menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-right: 70px;
    transition: right 0.3s ease;
}

.nav {
    margin-right: 230px;
}

.nav-menu ul {
    list-style: none;
    display: flex;
    align-items: center;
    font-size: 14px;
    padding-right: 40px;
}

.nav-menu ul li {
    margin: 0 10px;
    border-bottom:  2px solid transparent;
    position: relative;
}

.nav-menu ul li:hover {
    cursor: pointer;
}

.nav-menu ul li::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 50%;
  width: 0;
  height: 2px;
  background-color: #1F1F1F;
  transform: translateX(-50%) scaleX(0);
  transform-origin: center;
  transition: transform 0.6s ease;
}

.nav-menu ul li:hover::after {
  width: 100%;
  transform: translateX(-50%) scaleX(1);
}


.nav-icons {
    width: 176px;
    height: 24.447265625px;
    display: flex;
    align-items: center;
    justify-content: space-between;
position: relative;
}

.nav-icons img {
    width: 24px;
    height: 24px;
    cursor: pointer;
}

.nav-icons .search-svg {
    padding-right: 40px;
}

.nav-icons .bag-svg::after {
    content: "1";
            font-size: 11px;
            color: #ffffff;
            background-color: #1F1F1F;
            width: 14px;
            height: 14px;
            border-radius: 99px;
            top: 0;
            right: 0;
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
}

.nav-toggle {
  display: none;
}

.menu-icon {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 25px;
  height: 20px;
  cursor: pointer;
}

.menu-icon div {
  height: 3px;
  background-color: #1F1F1F;
  width: 100%;
  border-radius: 2px;
}




/* Tablet: shrink spacing */
@media (max-width: 1024px) {
.header {
  height: 105px;
}

  .nav {
    margin-right: 80px;
  }

  .nav-menu ul {
    font-size: 12px;
    padding-right: 20px;
  }

  .nav-icons {
    width: 140px;
  }

  .nav-icons .search-svg {
    padding-right: 20px;
  }
}

@media (max-width: 768px) {
  .header {
    height: 80px;
  }

  .nav-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 30px;
  }

  #nav-menu {
    display: flex;
    flex-direction: column;
    position: fixed;
    top: 0;
    left: -100%;
    width: 80%;
    height: 100vh;
    background-color: rgb(131, 67, 67);
    padding: 40px 20px;
    box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
    transition: left 0.3s ease;
    z-index: 9998;
    display: flex;
  }

  .nav-menu.active {
    left: 0;
  }

.nav {
    width: 50%;
    background-color: bisque;
    display: block; /* was flex, not needed */
    position: absolute;
    left: 0;
  }

  .nav ul {
     display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    padding: 0;
    margin: 0;
    gap: 20px;
    width: auto;
  }

  .nav-list {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    padding: 0;
    margin: 0;
    gap: 20px;
    width: auto; /* prevent full width stretching */
  }

  .nav-list li {
    width: auto;
    padding: 10px 0;
    text-align: left;
  }
}

.nav-icons {
  background-color: blue;
  display: flex;
  flex-direction: column;
}


  .header-container h1 {
    font-size: 24px;
    margin-left: 30px;
  }
}





  </style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggle = document.getElementById("nav-toggle");
    const menu = document.getElementById("nav-menu");

    toggle.addEventListener("click", () => {
      menu.classList.toggle("active");
    });
  });
</script>




