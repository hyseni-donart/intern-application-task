<div class="page-section-one">

    <div class="left">
        <a href="{{ routes.root_url }}" style="text-decoration: none;"><p style="color: #A0A0A0;">Homepage</p></a>
        <img src="{{ 'small-arrow.svg' | asset_url }}" alt="arrow-icon" />
        <p style="color: #A0A0A0;">Women</p>
         <img src="{{ 'small-arrow.svg' | asset_url }}" alt="arrow-icon" />
        <p>Leather boots with tall leg</p>
    </div>

    <div class="right">
        <img src="{{ 'arrow-left.svg' | asset_url }}" alt="left" />
        <p>Previous Product</p>
        <span></span>
        <p>Next Product</p>
        <img src="{{ 'arrow-right.svg' | asset_url }}" alt="Right" />
    </div>


</div>


<style>

    .page-section-one {
    width:100%;
    height:60px;
    background-color: #F7F7F7;
    display: flex;
    align-items: center;
    justify-content: space-between
    }

    .page-section-one .left,
    .page-section-one .right {
        height: 23px;
        width: auto;
        margin-left: 70px;
        margin-right: 70px;
        display: flex;
        align-items: center;
    }

    .page-section-one .left p {
        padding: 0 5px;
        color: #1f1f1f;
    }

    .page-section-one .right p {
        padding: 0 8px;
        color: #1f1f1f;
    }

    .page-section-one .right span {
        width: 1px;
        height: 100%;
        background-color: #E9E9E9;
    }

    .page-section-one .right img {
        cursor: pointer;
    }
            

@media (max-width: 1024px) {
  .page-section-one {
    height: auto;
    padding: 10px 40px;
    gap: 10px;
  }

  .page-section-one .left,
  .page-section-one .right {
    flex-wrap: wrap;
    margin-left: 40px;
        margin-right: 40px;
  }

  .page-section-one .left p,
  .page-section-one .right p {
    font-size: 11px;
    padding: 0 2px;
  }
}

@media (max-width: 768px) {
  .page-section-one {
    height: auto;
    flex-direction: column;
    align-items: flex-start;
    padding: 0 5px;
  }

  .page-section-one .left,
  .page-section-one .right {
    margin-left: 5px;
        margin-right: 5px;
  }

  .page-section-one .left p,
  .page-section-one .right p {
    font-size: 10px;
    padding: 0 1px;
  }

  .page-section-one img {
    height: 14px;
  }
}

</style>



