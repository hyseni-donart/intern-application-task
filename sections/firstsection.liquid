.slider-wrapper {
  display: flex;
  width: 300%;
  transition: transform 0.5s ease-in-out;
  height: 100%;
}

.slide {
  position: relative;
  height: 125%;
  width: 33.3333%;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  z-index: 0;
}

.first-section-content {
  position: relative;
  z-index: 1;
  width: 630px;
  height: 308px;
  margin-left: 70px;
