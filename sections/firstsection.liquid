  font-weight: 500;
  margin: 0;
  padding-bottom: 30px;
  color:  #1F1F1F;
}

.first-section-content button {
  width: 158px;
  height: 52px;
  font-size: 14px;
  border-radius: 8px;
  border: none;
  background-color: #1F1F1F;
  color: #ffffff;
  cursor: pointer;
}


.slider-dots {
  text-align: center;
  position: absolute;
  bottom: 20px;
  width: 100%;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slider-dots .dot {
  display: inline-block;
  width: 6px;
  height: 6px;
  margin: 0 5px;
  border-radius: 50%;
  cursor: pointer;
  border: 1px solid #1F1F1F;
  transition: background-color 0.3s;
}

.slider-dots .dot.active {
  width: 14px;
  height: 14px;
  border: 1px solid #1F1F1F;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slider-dots .dot.active::after {
content: '';
position: absolute;
width: 7px;
height: 7px;
border-radius: 50%;
background-color: #1F1F1F;
}


