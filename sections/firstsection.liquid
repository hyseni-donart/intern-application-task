</div>

<style>
.first-section-slider {
  position: relative;
  width: 100%;
  height: 500px;
  overflow: hidden;
}

.slider-wrapper {
  display: flex;
  width: 300%;
  transition: transform 0.5s ease-in-out;
  height: 100%;
}

.slide {
  flex: 0 0 100%;
  position: relative;
  height: 500px;
  width: 100%
}

.slide-img {

  margin-top: -150px;
  z-index: 0;
  position: absolute;
  top: 0;
  left: 0;
}

.first-section-content {
  position: relative;
  z-index: 1;
  width: 630px;
  height: 308px;
  margin-left: 70px;
  margin-top: 60px;
  color: white;
}

.first-section-content p {
  font-size: 18px;
  line-height: 24px;
  margin-top: 0;
  color:  #1F1F1F;
}

.first-section-content h2 {
  font-size: 80px;
  font-weight: 500;
  margin: 0;
  padding-bottom: 30px;
  color:  #1F1F1F;
}

.first-section-content button {
  width: 158px;
  height: 52px;
  font-size: 14px;
  border-radius: 8px;
  border: none;
  background-color: #1F1F1F;
  color: #ffffff;
  cursor: pointer;
}


.slider-dots {
  text-align: center;
  position: absolute;
  bottom: 20px;
  width: 100%;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slider-dots .dot {
  display: inline-block;
  width: 6px;
  height: 6px;
  margin: 0 5px;
  border-radius: 50%;
  cursor: pointer;
  border: 1px solid #1F1F1F;
  transition: background-color 0.3s;
}

.slider-dots .dot.active {
  width: 14px;
  height: 14px;
  border: 1px solid #1F1F1F;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slider-dots .dot.active::after {
content: '';
position: absolute;
width: 7px;
height: 7px;
border-radius: 50%;
background-color: #1F1F1F;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const wrapper = document.querySelector('.slider-wrapper');
  const dots = document.querySelectorAll('.dot');
  const totalSlides = dots.length;
  let index = 0;

  function updateSlider() {
    wrapper.style.transform = `translateX(-${index * 100}%)`;
    dots.forEach(dot => dot.classList.remove('active'));
    dots[index].classList.add('active');
  }

  dots.forEach(dot => {
    dot.addEventListener('click', () => {
      index = parseInt(dot.getAttribute('data-index'));
      updateSlider();
    });
  });

  setInterval(() => {
    index = (index + 1) % totalSlides;
    updateSlider();
  }, 4000);
});
</script>

